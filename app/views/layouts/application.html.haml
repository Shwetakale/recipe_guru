!!!
%html
  %head
    %title RecipeGuru
    %meta{ name: "viewport", content: "width=divice-width, initial-scale=1" }
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #wrap
      = render 'layouts/navbar'
      .container
        = render 'shared/flash'
        = yield
        - if (not current_user or (params["controller"].eql?("recipes") and (["new","edit"].include?params["action"])))
          %body{background: asset_url("bg_image2.jpg")}

    #footer
      .container
